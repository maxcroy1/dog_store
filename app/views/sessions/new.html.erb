<div class="container mx-auto my-5">
    <h3>Login</h3>
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, :class => "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.text_field :password, :class => "form-control"  %>
      </div>
      <%= f.submit "Login", :class => "btn btn-primary" %>
    <%end%>
  </div>